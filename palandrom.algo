FUNCTION IS_PLANDROME(WORDS:STRING;n,i:INTEGER;IS_PLANDROME:BOOLEAN) : 
VAR
    
BEGIN
    IF (I<n-1 AND WORD[i]==WORD[n-1]) THEN
        PLANDROME:=IS_PLANDROME(WORD,n-1,i+1)
    ELSE_IF (n-1==i) THEN
        PLANDROME:=TRUE
        RETURN PLANDROME
    ELSE
        PLANDROME:=TRUE
        RETURN PLANDROME
    END_IF
END